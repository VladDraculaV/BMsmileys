	\ProvidesPackage{BMsmileys}[2024/12/26 v1.0 Emoji macros package]

	\RequirePackage{graphicx}

	% Define macros for icons
	\providecommand {\IconSmile}[1][1] {\includegraphics[height=#1em]{smiley-icon.png}}
	\providecommand {\IconHappy}[1][1] {\includegraphics[height=#1em]{happy-icon.png}}
	\providecommand {\IconSad}[1][1] {\includegraphics[height=#1em]{sad-icon.png}}
