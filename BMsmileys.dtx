	\providecommand {\IconCry}[1][1] {\includegraphics[height=#1em]{cry-icon.png}}
	\providecommand {\IconSurprised}[1][1] {\includegraphics[height=#1em]{surprised-icon.png}}
	\providecommand {\IconAngry}[1][1] {\includegraphics[height=#1em]{angry-icon.png}}
	\providecommand {\IconBlowingKiss}[1][1] {\includegraphics[height=#1em]{face-blowing-a-kiss-emoji-icon.png}}
	\providecommand {\IconMonsterCartoon}[1][1] {\includegraphics[height=#1em]{monster-cartoon-icon.png}}
